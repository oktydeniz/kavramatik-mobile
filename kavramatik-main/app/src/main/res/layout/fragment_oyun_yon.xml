<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".view.YönOyunFragment" >

    <LinearLayout
        android:id="@+id/ustTasarim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:background="#77E9F8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/puan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tebrikler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Tebrikler!"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sonSkor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/geriDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#4CAF50"
            android:gravity="center"
            android:text="Geri Dön"
            android:textColor="@color/black"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ustYon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:srcCompat="@tools:sample/avatars" />

        <ProgressBar
            android:id="@+id/directionProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/solTasarim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:background="#E5B9EA"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/solYon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ortaTasarim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:background="#F4E0A9"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ortaYon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sagTasarim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:background="#ABE89D"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sagYon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
