<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/blur_bg_pzl"
    tools:context=".view.OyunlarDuyu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/education_screen_margin"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eslestirme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/colors"
                    android:focusable="true"
                    android:src="@drawable/find_card" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Eşleme"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/education_screen_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/choice_screen_margin"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/hafizaKartlari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/colors"
                    android:focusable="true"
                    android:src="@drawable/match_card" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Hafıza Kartları"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/education_screen_text_size" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
